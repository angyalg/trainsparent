<div class="container">
  <div class="row">

      <h1>Memory page</h1>

      <% @cards.each_slice(4) do |card| %>
      <div class="row">
        <% card.each do |card| %>
          <div class="col-xs-6 col-sm-3">
          <div class="card">
            <%= image_tag (card[0]) %>
            <p> <%= card[1] %></p>
          </div>
          </div>
        <% end %>
      </div>
      <% end %>

    </div>
  </div>

</div>

